{
    "name": "awcodes/pounce",
    "description": "Port of LivewireUI/modal for Filament",
    "keywords": [
        "awcodes",
        "laravel",
        "pounce",
        "filament",
        "modal",
        "livewire",
        "alpinejs"
    ],
    "homepage": "https://github.com/awcodes/pounce",
    "support": {
        "issues": "https://github.com/awcodes/pounce/issues",
        "source": "https://github.com/awcodes/pounce"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Weston",
            "email": "awcodes1@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "illuminate/contracts": "^10.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Awcodes\\Pounce\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awcodes\\Pounce\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Awcodes\\Pounce\\PounceServiceProvider"
            ],
            "aliases": {
                "Pounce": "Awcodes\\Pounce\\Facades\\Pounce"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
